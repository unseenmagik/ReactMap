{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "allowSyntheticDefaultImports": false,
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "jsx": "react",
    "paths": {
      "@assets/*": [
        "./assets/*"
      ],
      "@components/*": [
        "./components/*"
      ],
      "@services/*": [
        "./services/*"
      ],
      "@hooks/*": [
        "./hooks/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "**/node_modules/*",
    "dist"
  ]
}